<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.guru.nowplaying.ui.MovieDetailActivity"
    tools:showIn="@layout/activity_movie_detail"
    android:id="@+id/movie_scroll_view"
    android:background="@color/cardview_dark_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/movie_detail_layout"
        android:background="@color/cardview_dark_background">

        <ImageView
            android:id="@+id/movie_poster"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:contentDescription="TODO"
            tools:src="@mipmap/placeholder1"
            android:layout_margin="10dp"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_margin="4dp"-->
            <!--android:layout_toEndOf="@+id/movie_poster"-->
            <!--android:textSize="18sp"-->
            <!--tools:text="Madmax Fury"-->
            <!--android:id="@+id/movie_title"-->
            <!--android:padding="4dp"-->
            <!--android:textColor="#FFFFFF"-->
            <!--/>-->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/movie_data"
            android:orientation="vertical"
            android:minHeight="200dp"
            android:layout_toEndOf="@id/movie_poster">

        <TextView
            android:id="@+id/tag_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/movie_poster"
            android:layout_below="@+id/movie_title"
            android:layout_margin="4dp"
            tools:text="The run for oil"
            android:padding="2dp"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:id="@+id/movie_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/movie_poster"
            android:layout_below="@+id/tag_line"
            android:padding="2dp"
            android:layout_margin="4dp"
            android:textColor="#FFFFFF"
            android:ellipsize="end"

            tools:text="King T'Challa returns home from America to the reclusive, technologically advanced African nation of Wakanda to serve as his country's new leader. However, T'Challa soon finds that he is challenged for the throne by factions within his own country as well as without.  Using powers reserved to Wakandan kings, T'Challa assumes the Black Panther mantel to join with girlfriend Nakia, the queen-mother, his princess-kid sister,  members of the Dora Milaje , and an American secret agent, to prevent Wakanda from being dragged into a world war." />


        <TextView
            android:id="@+id/web_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/movie_description"
            android:layout_toEndOf="@id/movie_poster"
            android:layout_margin="4dp"
            android:layout_alignEnd="@id/movie_description"
            android:padding="2dp"
            android:layout_alignBaseline="@id/movie_poster"
            android:textColor="#c5e2fa"
            tools:text="www.madmaxfuruy.com"
            android:drawableStart="@drawable/ic_web"/>
        </LinearLayout>

       <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
           android:layout_centerVertical="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Cast"
            android:textAlignment="center"
            android:background="#ffff"
            android:id="@+id/cast_description"
            android:layout_below="@id/movie_data"
            android:layout_margin="4dp"
            android:padding="2dp"/>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cast_description"
            android:id="@+id/cast_recycler_list"
            android:layout_margin="4dp"
            android:padding="2dp">

        </android.support.v7.widget.RecyclerView>




    </RelativeLayout>





</android.support.v4.widget.NestedScrollView>
